}


<form method="post" name="contactForm" onsubmit="return validateForm()">
    <div class="form-group">
        <input type="text" class="form-control" id="ContactId" name="Id" hidden="hidden" value="@Model.Id">
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
        <div id="FormNameError" class="text-danger small"></div>


        <label for="MobilePhone">Mobile Phone</label>
        <input type="text" class="form-control" id="MobilePhone" name="MobilePhone"  value="@Model.MobilePhone">
        <div id="FormNumberError" class="text-danger small"></div>

        <label for="Dear">Dear</label>
        <input type="text" class="form-control" id="Dear" name="Dear"  value="@Model.Dear">

        <label for="JobTitle">Job Title</label>
        <input type="text" class="form-control" id="JobTitle" name="JobTitle" value="@Model.JobTitle">

        <label for="BirthDate">Birth Date</label>
        @*<input type="date" class="form-control" id="BirthDate" name="BirthDate">*@
        <input type="text" class="form-control" id="BirthDate" name="BirthDate" maxlength="10" value="@Model.BirthDate.ToShortDateString()" >
        <label id="FormDateError" class="text-danger small"></label>
    </div>

    <button type="submit" class="btn btn-secondary">Submit</button>
    <a class="btn btn-secondary" href="~/Home">Back</a>

</form>
<script src="~/js/ValidateForms.js" defer></script>
